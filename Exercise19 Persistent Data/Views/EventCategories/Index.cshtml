@model List<Exercise19_Persistent_Data.Models.EventCategory>

<h1>Coding Event Categories</h1>

@if (Model.Count == 0)
{ 
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th><th>Name</th>
        </tr>
        @foreach(var cat in Model)
        {
            <tr>
                <td>@cat.Id</td><td>@cat.Name</td>
            </tr>
        }
    </table>
}
