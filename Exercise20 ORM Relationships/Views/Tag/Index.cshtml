@model List<Exercise20_ORM_Relationships.Models.Tag>

<h1>All Tags</h1>

@if (Model.Count == 0)
{
    <p>No Tags yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Tag Name</th>
        </tr>
        @foreach (Tag tag in Model)
        {
            <tr>
                <td>@tag.Id</td>
                <td>@tag.Name</td>
            </tr>
        }
    </table>
}