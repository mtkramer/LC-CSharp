@{
}
<h1>The ViewBag.name is: @ViewBag.name</h1>
<form method='post' action='/hello'>
    <input type='text' name='name' />
    <input type='submit' value='Greet Me!' />
</form>
@if(ViewBag.Coffees.Count > 0)
{
    <h2>We have coffees!</h2>
    <ol>
        @foreach (string coffee in ViewBag.Coffees)
        {
            <li>@coffee</li>
        }
    </ol>
}
else
{
    <p>Sorry, no coffee.</p>
}
