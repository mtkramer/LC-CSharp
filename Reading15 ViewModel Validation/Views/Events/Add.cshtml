@using Reading15_ViewModel_Validation.ViewModels;
@model AddEventViewModel

<h1>Add Event</h1>

<form method="post" asp-controller="Events" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name">
            Name: <input asp-for="Name" />
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Description">
            Description: <input asp-for="Description" />
        </label>
    </div>
    <input type="submit" value="Add Event" />
</form>