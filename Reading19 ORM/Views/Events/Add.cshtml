@using Reading19_ORM.ViewModels;
@model AddEventViewModel

<h1>Add Event</h1>

<form method="post" asp-controller="Events" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name">
            Name: <input asp-for="Name" />
            <span asp-validation-for="Name" style="color:red"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Description">
            Description: <input asp-for="Description" />
            <span asp-validation-for="Description" style="color:red"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">
            Contact Email: <input asp-for="ContactEmail" />
            <span asp-validation-for="ContactEmail" style="color:red"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Type">
            Event Type: <select asp-for="Type" asp-items="Model.EventTypes"></select>
        </label>
    </div>
    <input type="submit" value="Add Event" />
</form>