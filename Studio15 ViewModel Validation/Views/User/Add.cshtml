@using Studio15_ViewModel_Validation.ViewModels;
@model AddUserViewModel

<h1>Sign Up Form</h1>

@if (ViewBag.error != null)
{
    <p>@ViewBag.error</p>
}

<form method="post" action="/user">
    <div class="form-group">
        <label asp-for="Username">
            Username: <input asp-for="Username" value="@Model.Username" />
            <span asp-validation-for="Username" style="color:red"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Email">
            Email: <input type="Email" asp-for="Email" value="@Model.Email" />
            <span asp-validation-for="Email" style="color:red"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Password">
            Password: <input type="password" asp-for="Password" value="@Model.Password" />
            <span asp-validation-for="Password" style="color:red"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="VerifyPassword">
            Confirm Password: <input type="password" asp-for="VerifyPassword" value="@Model.VerifyPassword" />
            <span asp-validation-for="VerifyPassword" style="color:red"></span>
        </label>
    </div>
    <input type='submit' value='Submit'>
</form>