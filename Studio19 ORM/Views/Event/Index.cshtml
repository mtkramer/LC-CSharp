@model List<Studio19_ORM.Models.Event>

<h1>Coding Events</h1>

<p><a asp-controller="Event" asp-action="Add">Add Event</a></p>
<p><a asp-controller="Event" asp-action="Delete">Delete Event</a></p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th><th>Name</th><th>Description</th><th>Contact Email</th><th>Event Type</th>
        </tr>
        @foreach (var evt in Model)
        {
            <tr>
                <td>@evt.Id</td><td>@evt.Name</td><td>@evt.Description</td><td>@evt.ContactEmail</td><td>@evt.Type</td>
            </tr>
        }
    </table>
}